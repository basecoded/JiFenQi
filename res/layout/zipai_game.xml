<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical" >

    <LinearLayout 
        android:layout_width="fill_parent"
        android:layout_height="40dp">
        <TextView 
            android:id="@+id/start_points"
            android:layout_width="30dp"
            android:layout_height="match_parent"
            android:background="@drawable/map_btn_capture_cancel"/>
        <View 
            android:layout_width="2dp"
            android:layout_height="wrap_content"
            android:background="@drawable/vertical_divider_1"/>
        <include android:id="@+id/player1_info"
            layout="@layout/zipai_player_info"/>
        
        <View 
            android:layout_width="2dp"
            android:layout_height="wrap_content"
            android:background="@drawable/vertical_divider_1"/>
        <include android:id="@+id/player2_info"
            layout="@layout/zipai_player_info"/>
        
        <View 
            android:layout_width="2dp"
            android:layout_height="wrap_content"
            android:background="@drawable/vertical_divider_1"/>
        <include android:id="@+id/player3_info"
            layout="@layout/zipai_player_info"/>
        
        <View 
            android:id="@+id/player4_name_div"
            android:layout_width="2dp"
            android:layout_height="wrap_content"
            android:background="@drawable/vertical_divider_1"/>
        <include android:id="@+id/player4_info"
            layout="@layout/zipai_player_info"/>
    </LinearLayout>
    
    <View 
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="@drawable/horizontal_divider"/>
    
    <ListView
        android:id="@+id/list"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        />
    
</LinearLayout>